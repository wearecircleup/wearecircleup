# Application Configuration
APP_ENV=development
BASE_URL=http://localhost:5173

# GitHub App Configuration
GITHUB_APP_CLIENT_ID=your_github_app_client_id
GITHUB_APP_CLIENT_SECRET=your_github_app_client_secret
GITHUB_APP_REDIRECT_URI=http://localhost:5173/auth/callback

# GitHub Repository
GITHUB_REPO_OWNER=wearecircleup
GITHUB_REPO_NAME=wearecircleup

# GitHub Token (for Actions and repository_dispatch)
GITHUB_TOKEN=your_github_token
VITE_GITHUB_PUBLIC_TOKEN=your_public_token_for_repo_dispatch

# Vite Frontend Environment Variables (prefix with VITE_)
VITE_APP_ENV=development
VITE_BASE_URL=http://localhost:5173
VITE_GITHUB_APP_CLIENT_ID=your_github_app_client_id
VITE_GITHUB_APP_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_GITHUB_REPO_OWNER=wearecircleup
VITE_GITHUB_REPO_NAME=wearecircleup

# DynamoDB Configuration - Profiles Table
AWS_ACCOUNT_ID=your_aws_account_id
AWS_REGION=your_aws_region
AWS_RESOURCE_ARN=your_dynamodb_table_arn
AWS_ROLE_ARN=your_iam_role_arn
DYNAMODB_TABLE_NAME=your_table_name
DYNAMODB_TABLE_PARTITION_KEY=PK

# DynamoDB Configuration - Presentations Table
DYNAMODB_PRESENTATIONS_TABLE_NAME=circleup-presentations
DYNAMODB_PRESENTATIONS_PARTITION_KEY=PK
DYNAMODB_PRESENTATIONS_RESOURCE_ARN=arn:aws:dynamodb:sa-east-1:311923415472:table/circleup-presentations

# IMPORTANT: For production (GitHub Pages), use:
# VITE_GITHUB_APP_REDIRECT_URI=https://circleup.com.co/auth/callback
# Make sure your GitHub OAuth App has BOTH URLs configured:
# - http://localhost:5173/auth/callback (for development)
# - https://circleup.com.co/auth/callback (for production)
