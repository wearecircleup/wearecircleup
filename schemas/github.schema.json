{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["github"],
  "properties": {
    "github": {
      "type": "object",
      "required": ["app", "api", "repository"],
      "properties": {
        "app": {
          "type": "object",
          "required": ["clientId", "redirectUri", "scopes"],
          "properties": {
            "clientId": {
              "type": "string",
              "minLength": 1
            },
            "redirectUri": {
              "type": "string"
            },
            "scopes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "api": {
          "type": "object",
          "required": ["baseUrl", "version", "timeout"],
          "properties": {
            "baseUrl": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "timeout": {
              "type": "integer",
              "minimum": 1000
            }
          }
        },
        "repository": {
          "type": "object",
          "required": ["owner", "name"],
          "properties": {
            "owner": {
              "type": "string",
              "minLength": 1
            },
            "name": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
